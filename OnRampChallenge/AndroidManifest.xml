		  android:name="com.dropbox.client2.android.AuthActivity"
		  android:launchMode="singleTask"
		  android:configChanges="orientation|keyboard">
		  <intent-filter>
		    <data android:scheme="db-7wbuiyq5xzom7s0" />
		    <action android:name="android.intent.action.VIEW" />
		    <category android:name="android.intent.category.BROWSABLE"/>
		    <category android:name="android.intent.category.DEFAULT" />
		  </intent-filter>
		</activity>
        <activity
            android:name="com.mobiquity.challenge.onrampchallenge.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobiquity.challenge.onrampchallenge.MenuActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mobiquity.challenge.onrampchallenge.PhotoListActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name="com.mobiquity.challenge.onrampchallenge.PhotoActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mobiquity.challenge.onrampchallenge.AudioRecorderActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mobiquity.challenge.onrampchallenge.TextEditorActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mobiquity.challenge.onrampchallenge.ListOfEffectsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mobiquity.challenge.onrampchallenge.EffectAddedActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
